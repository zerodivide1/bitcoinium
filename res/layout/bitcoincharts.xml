<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bitcoincharts_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@android:color/black" >

    <TableRow>

        <TextView
            android:id="@+id/bitcoincharts_symbol"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:text="Symbol"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/last"
            android:textColor="#33B5E5"
            android:textSize="18sp" />
        <!--
        <TextView
            android:layout_weight="1"
            android:background="#101010"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent"
            android:text="Avg"
            android:textColor="#33B5E5" />-->

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="Vol"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/low"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/high"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <!--
        <TextView
            android:layout_weight="1"
            android:background="#101010"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent"
            android:text="Bid"
            android:textColor="#33B5E5" />

        <TextView
            android:layout_weight="1"
            android:background="#101010"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent"
            android:text="Ask"
            android:textColor="#33B5E5" />
        -->
    </TableRow>

    <ScrollView
        android:id="@+id/bitcoincharts_tablescroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/header"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TableLayout
            android:id="@+id/bitcoincharts_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:showDividers="beginning"
            android:stretchColumns="5" >
        </TableLayout>
    </ScrollView>
    
        <LinearLayout
        android:id="@+id/linlaHeaderProgress3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbHeaderProgress3"
            style="?android:attr/progressBarStyleLarge"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>
    
<!--     <WebView
        android:id="@+id/karma_ad"
